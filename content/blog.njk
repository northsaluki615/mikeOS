  "rss": "📰",
  "relationships": "👫",
  "love": "❤️",
  "privacy": "🕵️",
  "tools": "🛠️"
} %}

<div class="grid-container">
  {% for tag in collections.topTags %}
    <div class="tag-box">
      <h2>{{ tagEmojis[tag[0]] | default('🏷️') }} {{ tag[0] | capitalize }}</h2>
      <ul>
        {% for page in collections.all %}
          {% if page.data.tags and tag[0] in page.data.tags %}
            <li><a href="{{ page.url }}">{{ page.data.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>

