<footer>
    <nav>
        <ul>
            <li>
                <a rel="me" href="https://github.com/northsaluki615">
                    <i class="fa-brands fa-github"></i>
                </a>
            </li>
            <li>
                <a rel="me" href="https://www.linkedin.com/in/michaelhelmers">
                    <i class="fa-brands fa-linkedin"></i>
                </a>
            </li>
            <li>
                <a rel="me" href="mailto:mikehelmers@proton.me">
                    <i class="fa-regular fa-envelope"></i>
                </a>
            </li>
            <li>
                <a rel="me" href="https://infosec.exchange/@northsaluki615">
                    <i class="fa-brands fa-mastodon"></i>
                </a>
            </li>
            <li>
                <a href="https://mike.helmers.me/feed.xml">
                    <i class="fa-solid fa-rss"></i>
                </a>
            </li>
        </ul>
    </nav>

    {% if hCard %}
    <div class="h-card">
        <h2 class="p-name">{{ hCard.name }}</h2>
        <p class="p-role">{{ hCard.role }}</p>
        <p class="p-email">
            Email: <a href="mailto:{{ hCard.email }}">{{ hCard.email }}</a>
        </p>
    </div>
    {% endif %}

    <!-- Inline Content Container -->
    <div class="footer-inline-container" style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; gap: 20px;">
        <!-- Visitor Counter -->
        <div id="visitor-counter"></div>

        <!-- People Pledge Badge -->
        <a href="https://people.pledge.party/" target="_blank">
            <img
                src="https://people.pledge.party/badges/people_pledge_badge_party_pink_cream.svg"
                alt="People Pledge Badge"
                style="width: 150px; height: auto;"
            />
        </a>
    </div>

    <!-- Single-line Attribution -->
    <p style="text-align: center; font-size: 0.9em; margin-top: 20px;">
        mikeOS by 
        <a href="https://mike.helmers.me/about" rel="author">mike helmers</a>
        is licensed under 
        <a href="https://creativecommons.org/licenses/by-nc/4.0/" target="_blank" rel="license noopener noreferrer">
            Creative Commons Attribution 4.0
        </a>
        and was built with 
        <a href="https://www.11ty.dev/">Eleventy</a>
        on <time datetime="2024-12-17T16:42:30.993Z">2024-12-17</time>.
    </p>

    <!-- GoatCounter Script -->
    <script>
        var t = setInterval(function () {
            if (window.goatcounter && window.goatcounter.visit_count) {
                clearInterval(t);
                window.goatcounter.visit_count({
                    append: "#visitor-counter",
                    type: "svg",
                    no_branding: false,
                    style: `
                        #gcvc-border { fill: transparent; stroke: #000; }
                        #gcvc-for { fill: #000; font-size: 14px; }
                        #gcvc-views { fill: #000; font-size: 16px; font-weight: bold; }
                        #gcvc-by { fill: #000; font-size: 12px; }
                    `,
                });
            }
        }, 100);
    </script>
    <script
        data-goatcounter="https://mikesgoat.goatcounter.com/count"
        async
        src="//gc.zgo.at/count.js"
    ></script>
</footer>
