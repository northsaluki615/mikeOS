                clearInterval(t);
                window.goatcounter.visit_count({
                    append: '#visitor-counter', // Append the counter to the div with id visitor-counter
                    type: 'svg', // Use SVG for the counter
                    no_branding: false, // Keep the GoatCounter branding
                    style: `
                        #gcvc-border { fill: transparent; stroke: #000; } /* Border of the SVG */
                        #gcvc-for { fill: #000; font-size: 14px; } /* "Views for this page" text */
                        #gcvc-views { fill: #000; font-size: 16px; font-weight: bold; } /* Number with views */
                        #gcvc-by { fill: #000; font-size: 12px; } /* "stats by GoatCounter" text */
                    `
                });
